%p#notice= notice
%p
  %strong User:
  = @idea.user_id
%p
  %strong Title:
  = @idea.title
%p
  %strong Genre:
  = @idea.genre
%p
  %strong Brief:
  = @idea.brief
%p
  %strong Description:
  = @idea.description
%p
  %strong Number of Likes
  =@idea.get_likes(:vote_scope => 'rank').size
  =@idea.get_upvotes(:vote_scope => 'rank').size
  =@idea.find_votes_for(:vote_scope => 'rank').size

= link_to 'Edit', edit_idea_path(@idea)
