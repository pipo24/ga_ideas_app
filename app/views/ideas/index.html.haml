%p#notice= notice
%h1 Listing Ideas
%table
  %thead
    %tr
      %th User
      %th Title
      %th Genre
      %th Brief
      %th Description
      %th{:colspan => "3"}
  %tbody#ideas-list
%br/
= link_to 'New Idea', new_idea_path

%script{:type => 'text/template', id: "ideasTemplate"}
  %tr
    %td
      <%= full_name %>
    %td
      <%= title %>
    %td
      <%= genre %>
    %td
      <%= brief %>
    %td
      <%= description %>
    %td
      :plain
        <a href="/ideas/<%= id %>">Show</a>  
  - if can? :edit, @idea
    %td
      :plain
        <a href="/ideas/<%= id %>/edit">Edit</a>