= form_for @medium do |f|
  - if @medium.errors.any?
    #error_explanation
      %h2= "#{pluralize(@medium.errors.count, "error")} prohibited this medium from being saved:"
      %ul
        - @medium.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :idea_id
    %br/
    = f.text_field :idea_id

  .field
    = f.label :title
    %br/
    = f.text_field :title

  .field
    = f.label :content
    %br/
    = f.text_field :content

  .field
    = f.label :media_type
    %br/
    = f.text_field :media_type

  .field
    = f.label :content
    %br/
    = f.file_field :content


  .actions
    = f.submit 'Save'
