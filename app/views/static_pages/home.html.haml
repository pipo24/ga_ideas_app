%div#fullpage
  %div#headerhome
    %h1.homeheader 
      GA IDEAS NETWORK
    %h2.hometagline
      What is your idea Ninja?

= content_for :homepage_content do
  %div#main
    %div#mainideas
      %h3.homemain
        TOP THREE TRENDING IDEAS
        %ul.small-block-grid-1.medium-block-grid-2.large-block-grid-3
          - @ideas.each do |idea|
            %li
              %ul.ideas-homepage
                %li
                  = link_to "#{idea.title}", idea
                  %br
                  Inventor: 
                  = link_to "#{idea.user.first_name + " " + idea.user.last_name}", idea.user
                  %br
                  = idea.brief
                  %br
                  = image_tag idea.media[0].try(:content)
